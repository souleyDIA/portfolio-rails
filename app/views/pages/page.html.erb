<div class="container">
  <div class="row">
    <div class="col-md-4">
     <% @projects.each do |project| %>
        <div class="card">
          <%= image_tag(project.image, :class => "card-img-top", :alt => "music-home") %>
          <div class="card-body">
            <h5 class="card-title">Description</h5>
            <p class="card-text"><%=project.description%></p>
            <a href="#" class="btn btn-primary">View App</a>
          </div>
        </div>
     <% end %>
    </div>
  </div>
</div>